<!-- ESTILO CSS -->
 <style>
    html, body {
        font-family: sans-serif;
        min-height: 100vh;
        /* display: flex;  <--- BORRADO */
        /* flex-direction: column; <--- BORRADO */
        display: block; /* <--- AGREGADO: Esto es lo estándar y seguro */
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        width: 100%;
        max-width: 100vw;
    }

  img, iframe, video {
    max-width: 100%; /* Que nunca sean más grandes que su contenedor */
    height: auto;
}



	/* Estilos del Hero Section */
  .hero-section {
    /* ALTURA: Que ocupe casi toda la pantalla al empezar (80% del alto) */
    height: 100vh; 
    
    /* EL TRUCO DEL FONDO OSCURO: */
    /* Es una capa de color negro al 70% de opacidad (rgba 0,0,0,0.7) ENCIMA de la foto */
    background-image: 
      linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
      url('/images/logo-fondo.jpg'); /* <- CAMBIA ESTO POR TU NOMBRE DE FOTO */
      
    /* Asegura que la foto cubra todo el espacio sin deformarse */
    background-size: cover;
    background-position: center;
    
    /* CENTRADO: Usamos Flexbox para poner todo al medio */
    display: flex;
    flex-direction: column; /* Uno debajo del otro */
    justify-content: center; /* Centrado vertical */
    align-items: center;     /* Centrado horizontal */
    text-align: center;
    color: white; /* Texto blanco */
  }



  /* Estilos para el Logo dentro del Hero */
  .hero-logo {
    width: 250px;
	height: 250px; /* Ajusta este tamaño según tu logo */
    margin-bottom: 20px;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: bold;
    margin: 0;
    text-transform: uppercase; /* Letras mayúsculas */
  }

  .hero-subtitle {
    font-size: 1.2rem;
    margin-top: 10px;
    opacity: 0.9; /* Un poco más suave que el título */
  }

  /* Contenedor de los botones para que no estén pegados */
  .hero-buttons {
    margin-top: 30px;
    display: flex;
    gap: 20px; /* Separación entre botones */
  }



  /* El estilo del botón elegante */
  .btn-outline {
    text-decoration: none;
    color: white;
    border: 2px solid white; /* Borde blanco */
    padding: 10px 25px;      /* Relleno: 10px arriba/abajo, 25px lados */
    border-radius: 50px;     /* Bordes muy redondos (tipo cápsula) */
    font-weight: bold;
    text-transform: uppercase;
    font-size: 0.9rem;
    transition: all 0.3s ease; /* Para que el cambio de color sea suave */
  }

  /* Efecto al pasar el mouse (Hover) */
  .btn-outline:hover {
    background-color: skyblue;
    color: black; /* El texto se vuelve negro para leerse sobre blanco */
    transform: scale(1.05); /* Crece un poquito */
  }



  /* Contenedor de las redes */
  .hero-social {
    margin-top: 35px; /* Separación de los botones */
    display: flex;
    gap: 25px; /* Espacio entre cada ícono */
  }

  /* Estilo de los enlaces (el área clickable) */
  .hero-social a {
    color: rgba(255, 255, 255, 0.8); /* Blanco un pelín transparente */
    transition: all 0.3s ease;
    display: flex; /* Para que el SVG esté centrado */
  }

  /* Efecto al pasar el mouse (Hover) */
  .hero-social a:hover {
    color: skyblue; /* Blanco puro */
    transform: translateY(-3px); /* Flota un poquito hacia arriba */
  }

  /* Hacemos los íconos un poco más grandes que el texto normal */
  .hero-social svg {
    width: 28px;
    height: 28px;
  }

  /* ... tus estilos normales ... */

/* ESTO ES LO NUEVO PARA CELULARES */
@media (max-width: 874px) {
    
    /* CORREGIDO: Usamos .hero-section en vez de #hero */
    .hero-section {
        align-items: center;
        text-align: center;
        padding: 0 20px;
        height: auto; /* Permite que crezca si es necesario */
        min-height: 100vh;
        padding-top: 100px; /* Espacio para que el menú no tape el logo */
        padding-bottom: 50px;
    }

    /* Ajustamos el tamaño del título */
    .hero-title {
        font-size: 2.2rem;
        line-height: 1.1;
    }

    /* CORREGIDO: Usamos .hero-buttons en vez de .botones */
    .hero-buttons {
        flex-direction: column; /* Pone los botones uno bajo el otro */
        gap: 15px;
        width: 100%; 
    }

    /* CORREGIDO: Usamos .btn-outline en vez de .btn */
    .btn-outline {
        width: 100%; /* Botón ancho completo */
        display: block; /* Para que tome el ancho */
        box-sizing: border-box; /* Para que el padding no rompa el ancho */
    }
}
</style>