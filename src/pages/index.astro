<style is:global>
    html, body {
        font-family: 'Outfit', sans-serif; /* Nueva fuente más moderna */
        background-color:#18181b; /* FONDO DARK TECH */
        color: #f8fafc; /* Texto gris muy claro para contrastar */
        min-height: 100vh;
        display: block;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        width: 100%;
        max-width: 100vw;
        scroll-behavior: smooth; /* Para que al hacer clic en un botón baje suavemente */
    }

  img, iframe, video {
    max-width: 100%;
    height: auto;
  }

	/* Estilos del Hero Section */
  .hero-section {
    height: 100vh;
    /* Degradado oscuro que se funde con el fondo de la página */
    background-image: 
      linear-gradient(rgba(5, 5, 5, 0.7), rgba(5, 5, 5, 0.95)),
      url('/images/logo-fondo.jpg');
    background-size: cover;
    background-position: center;
    
    display: flex;
    flex-direction: column;
    justify-content: center; 
    align-items: center;
    text-align: center;
    color: white;
  }

  /* Estilos para el Logo dentro del Hero */
  .hero-logo {
    width: 250px;
    height: 250px; 
    margin-bottom: 20px;
    filter: drop-shadow(0 0 20px rgba(34, 211, 238, 0.3)); /* Brillo suave al logo */
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
    text-transform: uppercase;
    color: #ffffff;
    text-shadow: 0 0 15px rgba(255, 255, 255, 0.2);
  }

  .hero-subtitle {
    font-size: 1.5rem;
    margin-top: 10px;
    color: #22d3ee; /* Color Cyan Neón */
    font-weight: 600;
    letter-spacing: 2px;
  }

  /* Contenedor de los botones */
  .hero-buttons {
    margin-top: 30px;
    display: flex;
    gap: 20px; 
  }

  /* El estilo del botón elegante NEÓN */
  .btn-outline {
    text-decoration: none;
    color: #22d3ee; /* Texto Cyan */
    border: 2px solid #22d3ee; /* Borde Cyan */
    padding: 12px 30px;
    border-radius: 50px;
    font-weight: bold;
    text-transform: uppercase;
    font-size: 0.95rem;
    letter-spacing: 1px;
    transition: all 0.3s ease;
  }

  /* Efecto al pasar el mouse (Hover) */
  .btn-outline:hover {
    background-color: #22d3ee;
    color: #0f172a; /* El texto se vuelve oscuro */
    transform: scale(1.05);
    box-shadow: 0 0 20px rgba(34, 211, 238, 0.5); /* Resplandor Neón */
  }

  /* Contenedor de las redes */
  .hero-social {
    margin-top: 40px;
    display: flex;
    gap: 25px;
  }

  /* Estilo de los enlaces */
  .hero-social a {
    color: #94a3b8; /* Gris azulado para que no llamen TANTO la atención por defecto */
    transition: all 0.3s ease;
    display: flex;
  }

  /* Efecto al pasar el mouse (Hover) */
  .hero-social a:hover {
    color: #22d3ee; /* Cyan Neón */
    transform: translateY(-5px); 
    filter: drop-shadow(0 0 10px rgba(34, 211, 238, 0.6)); /* Brillo en el ícono */
  }

  .hero-social svg {
    width: 30px;
    height: 30px;
  }

/* ESTILOS PARA CELULARES */
@media (max-width: 874px) {
    
    .hero-section {
        align-items: center;
        text-align: center;
        padding: 0 20px;
        height: auto; 
        min-height: 100vh;
        padding-top: 100px; 
        padding-bottom: 50px;
    }

    .hero-logo {
        width: 180px;
        height: 180px;
    }

    .hero-title {
        font-size: 2.2rem;
        line-height: 1.1;
    }

    .hero-buttons {
        flex-direction: column;
        gap: 15px;
        width: 100%;
        max-width: 300px; /* Para que no sean exageradamente anchos en celulares grandes */
    }

    .btn-outline {
        width: 100%;
        display: block;
        box-sizing: border-box;
    }
}
</style>